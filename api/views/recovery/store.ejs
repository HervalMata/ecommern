<!doctype html>
<html>
<head>
    <% include('../partials/header') %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-3 col-sm-offset-3">
            <h2>Recuperar Senha</h2>
            <hr /><br />
            <% if (success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <div class="text-center">
                    <h3>Agora vocÃª pode fazer seu login novamente :)</h3>
                </div>
            <% } %>

            <% if (error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>

            <% if (!success) { %>
                <p>
                    Digite aqui sua nova senha
                </p>

                <form action="/v1/api/users/recovery-password" method="post">
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Digite o sua nova senha" />
                    </div>
                    <button class="btn btn-primary">
                        Criar Nova Senha
                    </button>
                </form>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>